@page "~/admin/employeelist"
@model Code_Project_3._2.Pages.EmployeeListModel
@{
    var Employees = Model.AvailableEmployees; 
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker Management</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto py-6">
        <h1 class="text-2xl font-semibold mb-4">Worker Management</h1>
        <button asp-page="~/admin/employeeadd" asp-page-handler="get" class="text-green-600 hover:text-white hover:bg-green-600 duration-200 px-2 py-1 rounded-md my-4">Add Employee</button>
        <table class="min-w-full bg-white transition-all">
            <thead>
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Worker Code</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Worker Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Worker Surname</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Department Id</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Employees)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.Code</td>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.Name</td>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.Surname</td>
                        <td class="px-6 py-4 whitespace-nowrap">@employee.DepartmentId</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <button class="text-indigo-600 hover:text-white hover:bg-indigo-600 duration-200 px-2 py-1 rounded-md">Edit</button>
                            <button class="text-red-600 hover:text-white hover:bg-red-600 duration-200 px-2 py-1 rounded-md ml-4">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
